<?xml version="1.0" encoding="iso-8859-1"?>
<config>
        <interface hosts='bus[*]' address='10.0.1.x' netmask='255.255.255.0'/>
        <interface hosts='router' names='*' address='10.0.1.x' netmask='255.255.255.0'/>
        <interface hosts='etherSwitch' names='*' address='10.0.1.x' netmask='255.255.255.0'/>
        <interface among='etherSwitch router sink' address='10.0.2.x' netmask='255.255.255.0'/>
        <route hosts='bus[*]' gateway='etherSwitch>ap[*]' destination='10.0.2.0' netmask='255.255.255.0' interface='wlan0' />
		<route hosts='etherSwitch' gateway='sink>router' destination='10.0.2.0' netmask='255.255.255.0' interface='wlan0' />
        <route hosts='sink' gateway='router>sink' destination='10.0.1.0' netmask='255.255.255.0' />
    </config>