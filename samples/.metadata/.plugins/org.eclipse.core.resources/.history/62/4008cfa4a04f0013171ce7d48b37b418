<?xml version="1.0" encoding="iso-8859-1"?>
<config>
        <interface hosts='bus[*]' address='10.0.1.x' netmask='255.255.255.0'/>
        <interface hosts='router' names='eth0' address='10.0.1.x' netmask='255.255.255.0'/>
        <interface among='router sink' address='10.0.2.x' netmask='255.255.255.0'/>
        <route hosts='bus[*]' gateway='router>ap[*]' destination='10.0.2.0' netmask='255.255.255.0' interface='wlan' />
        <route hosts='sink' gateway='router>sink' destination='10.0.1.0' netmask='255.255.255.0' />
    </config>